<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:foregroundGravity="center"
        android:src="@drawable/dailygerman" />


    <Button
        android:id="@+id/btn_calisma"
        android:layout_width="150dp"
        android:background="@color/beyaz"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:text="@string/calisma_buton"
        android:textColor="@color/mavi"
        android:textStyle="bold"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_veriyonet"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_calisma"
        android:layout_alignBottom="@+id/btn_calisma"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/beyaz"
        android:text="@string/veri_yonet"
        android:textColor="@color/mavi"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>